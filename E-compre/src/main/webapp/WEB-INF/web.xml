<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>E-compre</display-name>
  <servlet>
    <description></description>
    <display-name>CadastrarProdutoServlet</display-name>
    <servlet-name>CadastrarProdutoServlet</servlet-name>
    <servlet-class>controller.produto.CadastrarProdutoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CadastrarProdutoServlet</servlet-name>
    <url-pattern>/CadastrarProdutoServlet</url-pattern>
    <url-pattern>/produto/cadastrar</url-pattern>
    <url-pattern>/produto/novo</url-pattern>
    <url-pattern>/produto/adicionar</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ListarProdutosServlet</display-name>
    <servlet-name>ListarProdutosServlet</servlet-name>
    <servlet-class>controller.produto.ListarProdutosServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListarProdutosServlet</servlet-name>
    <url-pattern>/produto/listar</url-pattern>
    <url-pattern>/produto/consultar</url-pattern>
    <url-pattern>/produto/visualizar</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>EditarProdutoServlet</display-name>
    <servlet-name>EditarProdutoServlet</servlet-name>
    <servlet-class>controller.produto.EditarProdutoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditarProdutoServlet</servlet-name>
    <url-pattern>/produto/editar</url-pattern>
    <url-pattern>/produto/alterar</url-pattern>
    <url-pattern>/produto/atualizar</url-pattern>
  </servlet-mapping>
</web-app>